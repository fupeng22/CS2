@model Model.M_EmailManagement
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryUI/jquery.easyui.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/black/easyui.css")" rel="stylesheet"
        title="black" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/bootstrap/easyui.css")" rel="stylesheet"
        title="bootstrap"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/cupertino/easyui.css")" rel="stylesheet"
        title="cupertino"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/dark-hive/easyui.css")" rel="stylesheet"
        title="dark-hive"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/default/easyui.css")" rel="stylesheet"
        title="default"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/gray/easyui.css")" rel="stylesheet"
        title="gray"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro/easyui.css")" rel="stylesheet"
        title="metro"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro-blue/easyui.css")" rel="stylesheet"
        title="metro-blue"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro-gray/easyui.css")" rel="stylesheet"
        title="metro-gray"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro-green/easyui.css")" rel="stylesheet"
        title="metro-green"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro-orange/easyui.css")" rel="stylesheet"
        title="metro-orange"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/metro-red/easyui.css")" rel="stylesheet"
        title="metro-red"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/pepper-grinder/easyui.css")" rel="stylesheet"
        title="pepper-grinder"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/JqueryUI/themes/sunny/easyui.css")" rel="stylesheet"
        title="sunny"/>
    <link href="@Url.Content("~/JqueryUI/themes/icon.css")"  rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/JS/Huayu/Huayu_EmailManagement.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryUI/easyui-lang-zh_CN.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JS/Common/Common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/xheditor-1.2.1/xheditor-1.2.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/xheditor-1.2.1/xheditor_lang/zh-cn.js")" type="text/javascript"></script>
</head>
<body>
    <div>
        <form id="form_EmailInfo" method="post">
        <center>
            <div class="easyui-panel" title="发件人邮箱信息设置" style="width: 1024px;">
                <table style="width: 100%">
                    <tr>
                        <td>
                            邮箱SMTP:
                        </td>
                        <td>
                            @* <input type="text" id="txt_EmailSMTP" name="txt_EmailSMTP" class="easyui-validatebox"
                                data-options="required:true" style="width: 96%"   value="@Model.EmailSMTP"/>*@
                            <select id="txt_EmailSMTP" name="txt_EmailSMTP" class="easyui-combobox" editable="true"
                                panelheight="auto" style="width: 200px">
                                <option value="smtp.tatcargo.com">smtp.tatcargo.com</option>
                                <option value="smtp.qq.com">smtp.qq.com</option>
                            </select>
                            <input  type="hidden" id="hid_txt_EmailSMTP" name="hid_txt_EmailSMTP" value="@Model.EmailSMTP"/>
                        </td>
                        <td>
                            邮箱地址:
                        </td>
                        <td>
                            <input type="text" id="txt_EmailUserName" name="txt_EmailUserName" class="easyui-validatebox"
                                data-options="required:true,validType:'email'" style="width: 96%"  value="@Model.EmailUserName"/>
                        </td>
                        <td>
                            邮箱密码:
                        </td>
                        <td>
                            <input type="password" id="txt_EmailPwd" name="txt_EmailPwd" class="easyui-validatebox"
                                data-options="required:true" style="width: 50%"  value="@Model.EmailPwd" />
                        </td>
                    </tr>
                </table>
            </div>
        </center>
        <table style="width: 100%">
            <tr>
                <td>
                    <div class="easyui-panel" title="发送销售日报表邮件格式设置" style="width: 290px;">
                        <table style="width: 100%">
                            <tr>
                                <td style="width: 60px">
                                    邮件标题:
                                </td>
                                <td>
                                    <input type="text" id="txt_SendDialyReportMail_Subject" name="txt_SendDialyReportMail_Subject"
                                        style="width: 99%" value="@Model.SendDialyReport_Subject"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    邮件内容:
                                </td>
                                <td>
                                    <textarea rows="15" style="width: 100%" id="txt_SendDialyReportMail_Body" name="txt_SendDialyReportMail_Body">@Model.SendDialyReport_Body</textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td>
                    <div class="easyui-panel" title="发送放行单的邮件格式设置" style="width: 290px;">
                        <table style="width: 100%">
                            <tr>
                                <td style="width: 60px">
                                    邮件标题:
                                </td>
                                <td>
                                    <input type="text" id="txt_FirstPickGoodEmail_Subject" name="txt_FirstPickGoodEmail_Subject"
                                        style="width: 99%"  value="@Model.FirstPickGoodEmail_Subject"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    邮件内容:
                                </td>
                                <td>
                                    <textarea rows="15" style="width: 100%" id="txt_FirstPickGoodEmail_Body" name="txt_FirstPickGoodEmail_Body">@Model.FirstPickGoodEmail_Body</textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td>
                    <div class="easyui-panel" title="发送扣货单的邮件格式设置" style="width: 290px;">
                        <table style="width: 100%">
                            <tr>
                                <td style="width: 60px">
                                    邮件标题:
                                </td>
                                <td>
                                    <input type="text" id="txt_UnReleaseGoodEmail_Subject" name="txt_UnReleaseGoodEmail_Subject"
                                        style="width: 99%"  value="@Model.UnReleaseGoodEmail_Subject"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    邮件内容:
                                </td>
                                <td>
                                    <textarea rows="15" style="width: 100%" id="txt_UnReleaseGoodEmail_Body" name="txt_UnReleaseGoodEmail_Body">@Model.UnReleaseGoodEmail_Body</textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td>
                    <div class="easyui-panel" title="发送退货单的邮件格式设置" style="width: 290px;">
                        <table style="width: 100%">
                            <tr>
                                <td style="width: 60px">
                                    邮件标题:
                                </td>
                                <td>
                                    <input type="text" id="txt_RejectGoodEmail_Subject" name="txt_RejectGoodEmail_Subject"
                                        style="width: 99%"  value="@Model.RejectGoodEmail_Subject"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    邮件内容:
                                </td>
                                <td>
                                    <textarea rows="15" style="width: 100%" id="txt_RejectGoodEmail_Body" name="txt_RejectGoodEmail_Body">@Model.RejectGoodEmail_Body</textarea>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>
        <input type="hidden" id="hid_txt_FirstPickGoodEmail_Body" name="hid_txt_FirstPickGoodEmail_Body" />
        <input type="hidden" id="hid_txt_UnReleaseGoodEmail_Body" name="hid_txt_UnReleaseGoodEmail_Body" />
        <input type="hidden" id="hid_txt_RejectGoodEmail_Body" name="hid_txt_RejectGoodEmail_Body" />
        <input type="hidden" id="hid_txt_SendDialyReportMail_Body" name="hid_txt_SendDialyReportMail_Body" />
        </form>
        <center>
           <font style=" color:Red">注:邮件标题可使用"[Date]"来代替日期,结果日期如:20130828121212</font> <a href="#" id="btnSubmitForm" name="btnSubmit" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">
                提交</a></center>
    </div>
</body>
</html>
