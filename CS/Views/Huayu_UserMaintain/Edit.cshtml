@model Model.M_User
<!DOCTYPE html>
<html>
<head>
    <script src="@Url.Content("~/JS/Huayu/HuayuUserMaintain_Update.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <table cellpadding="3">
            <tr>
                <td>
                    用户名:
                </td>
                <td>
                    <input  type="hidden" id="userID" name="userID" value="@Model.UserID"/>
                    <input type="text" id="txtUserID" name="txtUserID" class="easyui-validatebox" required="true"  value="@Model.UserName"/>
                </td>
                <td>
                    密码:
                </td>
                <td>
                    <input type="password" id="txtUserPassword" name="txtUserPassword" class="easyui-validatebox"
                        required="true"  value="@Model.UserPassword"/>
                </td>
                <td>
                    确认密码:
                </td>
                <td>
                    <input type="password" id="txtReUserPassword" name="txtReUserPassword" class="easyui-validatebox"
                        required="true"  value="@Model.UserPassword"/>
                </td>
            </tr>
            <tr>
                <td>
                    权限:
                </td>
                <td>
                    <input id="ddAuthority" name="ddAuthority" />
                    <input  type="hidden" id="Authority" name="Authority" value="@Model.Authority"/>
                </td>
                <td>
                    单位类别:
                </td>
                <td>
                    <input id="ddComment" name="ddComment" />
                    <input  type="hidden" id="Comment" name="Comment" value="@Model.Comment"/>
                </td>
                <td>
                    联系人:
                </td>
                <td>
                    <input type="text" id="txtLinkPerson" name="txtLinkPerson"  value="@Model.LinkPerson"/>
                </td>
            </tr>
            <tr>
                <td>
                    联系人电话:
                </td>
                <td>
                    <input type="text" id="txtLinkTel" name="txtLinkTel"  value="@Model.LinkTel"/>
                </td>
                <td>
                    联系人身份证号:
                </td>
                <td colspan="3">
                    <input type="text" id="txtIndentityCpde" name="txtIndentityCpde" style="width: 100%"  value="@Model.IdentityCode"/>
                </td>
            </tr>
            <tr>
                <td>
                    公司全称:
                </td>
                <td colspan="3">
                    <input type="text" id="txtCompanyFullName" name="txtCompanyFullName" style="width: 100%"  value="@Model.CompanyFullName"/>
                </td>
                <td>
                    邮箱地址:
                </td>
                <td>
                    <input type="text" id="txtLinkMail" name="txtLinkMail"  value="@Model.LinkMail"/>
                </td>
            </tr>
            <tr>
                <td>
                    公司名称:
                </td>
                <td colspan="3">
                    <input type="text" id="txtCompany" style="width: 100%"  name="txtCompany" class="easyui-validatebox" required="true"  value="@Model.Company"/>
                </td>
                <td>
                    公司电话:
                </td>
                <td>
                    <input type="text" id="txtCompanyPhone" name="txtCompanyPhone"  value="@Model.CompanyPhone"/>
                </td>
            </tr>
            <tr>
                <td>
                    公司地址:
                </td>
                <td colspan="5">
                    <textarea id="txtCompanyAddr" name="txtCompanyAddr" style="width: 100%">@Model.CompanyAddr</textarea>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="checkbox" id="chkiSendFirstPickGoodsEmail" name="chkiSendFirstPickGoodsEmail"  checked="checked"/><label
                        for="chkiSendFirstPickGoodsEmail">放行单邮件通知</label>
                    <input  type="hidden" id="hid_chkiSendFirstPickGoodsEmail" name="hid_chkiSendFirstPickGoodsEmail" value="@Model.iSendFirstPickGoodsEmail"/>
                </td>
                <td colspan="2" align="center">
                    <input type="checkbox" id="chkiSendUnReleaseGoodsEmail" name="chkiSendUnReleaseGoodsEmail" checked="checked"/><label
                        for="chkiSendUnReleaseGoodsEmail">扣货单邮件通知</label>
                    <input  type="hidden" id="hid_chkiSendUnReleaseGoodsEmail" name="hid_chkiSendUnReleaseGoodsEmail" value="@Model.iSendUnReleaseGoodsEmail"/>
                </td>
                <td colspan="2" align="center">
                    <input type="checkbox" id="chkiSendRejectGoodsEmail" name="chkiSendRejectGoodsEmail" checked="checked"/><label
                        for="chkiSendRejectGoodsEmail">退货单邮件通知</label>
                    <input  type="hidden" id="hid_chkiSendRejectGoodsEmail" name="hid_chkiSendRejectGoodsEmail" value="@Model.iSendRejectGoodsEmail"/>
                </td>
            </tr>
        </table>
    }
</body>
</html>
